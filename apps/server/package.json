{
  "private": true,
  "name": "standup.games_server",
  "version": "1.0.0",
  "description": "npm init template for bootstrapping an empty Colyseus project",
  "main": "build/index.js",
  "scripts": {
    "start": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev": "npm run start",
    "loadtest": "colyseus-loadtest loadtest/example.ts --room my_room --numClients 2",
    "build": "npm run clean && tsc && copyfiles package.json ./build && copyfiles arena.env ./build",
    "clean": "rimraf build",
    "test": "mocha --require ts-node/register test/**_test.ts --exit --timeout 15000"
  },
  "author": "",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/colyseus/create-colyseus/issues"
  },
  "homepage": "https://github.com/colyseus/create-colyseus#readme",
  "devDependencies": {
    "@colyseus/loadtest": "^0.16.0",
    "@colyseus/testing": "^0.16.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^5.0.6",
    "@types/mocha": "^10.0.10",
    "copyfiles": "^2.4.1",
    "mocha": "^11.7.5",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@colyseus/monitor": "^0.16.0",
    "@colyseus/schema": "^3.0.0",
    "@colyseus/tools": "^0.16.19",
    "colyseus": "^0.16.0",
    "cors": "^2.8.5",
    "express": "^5.2.1"
  }
}
